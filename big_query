select
	user_post.pastebin_post.id, user_post.pastebin_post.user_id, user_post.pastebin_post.author, user_post.pastebin_post.description, user_post.pastebin_post.creation, user_post.site_user.name, pastebin_unit.paste_type
	
from

(
	select
		pastebin_post.id, pastebin_post.user_id, pastebin_post.author, pastebin_post.description, pastebin_post.creation, site_user.name

	from
		pastebin_post left outer join site_user on pastebin_post.user_id = site_user.id and pastebin_unit.paste_type
		
	where
		pastebin_post.anonymous_string is null and pastebin_post.reply_to is null
)
	as user_post

	left outer join pastebin_unit on user_post.pastebin_post.id = pastebin_unit.post_id;


